<idea-plugin>
    <id>com.github.gtache.lsp</id>
    <name>LSP Support</name>
    <version>2.0</version>
    <vendor email="guillaume.tache@hotmail.com" url="https://github.com/gtache">gtache</vendor>

    <description>Adds LSP (Language Server Protocol) support for IntelliJ</description>

    <change-notes>
        <![CDATA[
        -Changes Coursier to Aether
        -Converts all code to Kotlin
        -Refactoring for new IntelliJ plugin development best practices
        -Adds per-project settings
        -Updates to IntelliJ 2021.2
        -Updates some dependencies
]]>
    </change-notes>

    <idea-version since-build="212.0"/>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <resource-bundle>com.github.gtache.lsp.LSPBundle</resource-bundle>

    <applicationListeners>
        <listener class="com.github.gtache.lsp.editor.listeners.VFSListener"
                  topic="com.intellij.openapi.vfs.VirtualFileListener"/>
    </applicationListeners>

    <extensionPoints>
        <extensionPoint interface="com.github.gtache.lsp.contributors.icon.LSPIconProvider" name="lspIconProvider"/>
    </extensionPoints>

    <extensions defaultExtensionNs="com.intellij">

        <preloadingActivity implementation="com.github.gtache.lsp.services.application.LSPStartupActivity"/>
        <!-- Add your extensions here -->
        <fileDocumentManagerListener
                implementation="com.github.gtache.lsp.editor.listeners.FileDocumentManagerListenerImpl"/>
        <editorFactoryListener implementation="com.github.gtache.lsp.editor.listeners.EditorListener"/>
        <projectConfigurable instance="com.github.gtache.lsp.settings.project.MiscSettings" id="MiscSettings"
                             groupId="language" displayName="Language Server Protocol"/>
        <projectConfigurable parentId="MiscSettings" id="ServerSettings" displayName="Server Definitions"
                             instance="com.github.gtache.lsp.settings.project.ServersSettings"/>
        <applicationConfigurable parentId="MiscSettings" id="TimeoutSettings" displayName="Timeouts"
                                 instance="com.github.gtache.lsp.settings.application.TimeoutSettings"/>
        <applicationConfigurable parentId="MiscSettings" id="ArtifactSettings" displayName="Artifacts"
                                 instance="com.github.gtache.lsp.settings.application.ArtifactSettings"/>

        <projectService id="LSPProjectService"
                        serviceInterface="com.github.gtache.lsp.services.project.LSPProjectService"
                        serviceImplementation="com.github.gtache.lsp.services.project.LSPProjectServiceImpl"/>
        <applicationService id="LSPApplicationService"
                            serviceInterface="com.github.gtache.lsp.services.application.LSPApplicationService"
                            serviceImplementation="com.github.gtache.lsp.services.application.LSPApplicationServiceImpl"/>
        <projectService id="EditorProjectService"
                        serviceInterface="com.github.gtache.lsp.editor.services.project.EditorProjectService"
                        serviceImplementation="com.github.gtache.lsp.editor.services.project.EditorProjectServiceImpl"/>
        <applicationService id="EditorApplicationService"
                            serviceInterface="com.github.gtache.lsp.editor.services.application.EditorApplicationService"
                            serviceImplementation="com.github.gtache.lsp.editor.services.application.EditorApplicationServiceImpl"/>
        <projectService id="LSPProjectState"
                        serviceInterface="com.github.gtache.lsp.settings.project.LSPProjectSettings"
                        serviceImplementation="com.github.gtache.lsp.settings.project.LSPProjectSettingsImpl"/>
        <applicationService id="LSPApplicationState"
                            serviceInterface="com.github.gtache.lsp.settings.application.LSPApplicationSettings"
                            serviceImplementation="com.github.gtache.lsp.settings.application.LSPApplicationSettingsImpl"/>
        <applicationService id="Aether" serviceInterface="com.github.gtache.lsp.utils.aether.Aether"
                            serviceImplementation="com.github.gtache.lsp.utils.aether.AetherImpl"/>

        <projectService id="ReformatHandler"
                        serviceInterface="com.github.gtache.lsp.requests.services.project.ReformatProjectService"
                        serviceImplementation="com.github.gtache.lsp.requests.services.project.ReformatProjectServiceImpl"/>

        <gotoSymbolContributor implementation="com.github.gtache.lsp.contributors.gotoo.LSPGotoSymbolContributor"
                               id="LSPGotoSymbolContributor"/>
        <gotoClassContributor implementation="com.github.gtache.lsp.contributors.gotoo.LSPGotoClassContributor"
                              id="LSPGotoClassContributor"/>
        <typedHandler implementation="com.github.gtache.lsp.editor.listeners.LSPTypedHandler" id="LSPTypedHandler"/>
        <completion.contributor implementationClass="com.github.gtache.lsp.contributors.LSPCompletionContributor"
                                id="LSPCompletionContributor" language="any"/>
        <inspectionToolProvider implementation="com.github.gtache.lsp.contributors.inspection.LSPInspectionProvider"
                                id="LSPInspectionProvider"/>
        <fileDocumentSynchronizationVetoer
                implementation="com.github.gtache.lsp.editor.listeners.LSPFileDocumentSynchronizationVetoer"
                id="LSPFileDocumentSynchronizationVetoer"/>

        <renameHandler implementation="com.github.gtache.lsp.contributors.rename.LSPRenameHandler" id="LSPRenameHandler"
                       order="first"/>
        <renamePsiElementProcessor implementation="com.github.gtache.lsp.contributors.rename.LSPRenameProcessor"
                                   id="LSPRenameProcessor" order="first"/>
        <lang.documentationProvider implementationClass="com.github.gtache.lsp.contributors.LSPDocumentationProvider"
                                    id="LSPDocumentationProvider" language="TEXT" order="first"/>
        <statusBarWidgetFactory
                implementation="com.github.gtache.lsp.client.languageserver.status.ServerStatusWidgetFactory"/>

        <!--        <lang.findUsagesProvider implementationClass="com.github.gtache.lsp.contributors.LSPFindUsagesProvider" id="LSPFindUsagesProvider" language="TEXT" order="first" />
                <findUsagesHandlerFactory implementation="com.github.gtache.lsp.contributors.LSPFindUsagesHandlerFactory" id="LSPFindUsagesHandlerFactory" />-->
    </extensions>

    <actions>
        <action class="com.github.gtache.lsp.actions.QuickDocAction" id="QuickJavaDoc" text="Quick Doc"
                overrides="true"/> <!-- Overrides quickdoc if possible, otherwise delegates to it -->
        <action class="com.github.gtache.lsp.actions.ReformatAction" id="ReformatCode" use-shortcut-of="ReformatCode"
                overrides="true" text="Reformat Code"/>
        <action class="com.github.gtache.lsp.actions.ShowReformatDialogAction" id="ShowReformatFileDialog"
                use-shortcut-of="ShowReformatFileDialog" overrides="true" text="Show Reformat File Dialog"/>
        <action class="com.github.gtache.lsp.actions.ReferencesAction"
                id="LSPFindUsages">
            <keyboard-shortcut first-keystroke="shift alt F7" keymap="$default"/>
        </action>
        <action class="com.github.gtache.lsp.actions.RefactoringAction" id="LSPRefactoringAction">
            <keyboard-shortcut first-keystroke="shift alt F6" keymap="$default"/>
        </action>
        <action class="com.github.gtache.lsp.actions.LinkToServerAction" id="LSPForceLink"
                text="Link to LSP Server..." description="Forces linking a file with an LSP server">
            <add-to-group group-id="EditorPopupMenu"/>
            <add-to-group group-id="EditorTabPopupMenu"/>
            <add-to-group group-id="ProjectViewPopupMenu"/>
            <keyboard-shortcut first-keystroke="shift alt F8" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>
